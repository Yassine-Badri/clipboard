{
  "name": "sass-starter",
  "version": "1.0.0",
  "description": "A light package for compiling Sass and running a dev server",
  "main": "index.js",
  "scripts": {
    "compile:sass": "node-sass sass/main.scss css/style.css",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver compile:sass"
  },
  "author": "Yassine Badri",
  "license": "ISC",
  "devDependencies": {
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5"
  }
}
